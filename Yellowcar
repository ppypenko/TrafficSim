package edu.csc150;

import greenfoot.Actor;

public class Yellowcar extends Car25{
	
	public Yellowcar(Direction r) {
		super(r);
		this.setImage("images/topCarYellow.png");
		setRotation(r.GetRotation());
		
	}
	public void act(){
		this.move(move);
		this.moveCar();
		this.newLocation();
		this.checkIntersection();
		this.removeOrCrash();
	}
	@Override
	protected void turn(Actor i) {
		turnRight(i);
	}
	
	public void removeOrCrash(){
		if(crash){
			exp++;
		}
			hasCrash();
	}
}
